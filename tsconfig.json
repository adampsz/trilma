{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "allowJs": true,
    "esModuleInterop": true,

    "strict": true,
    "skipLibCheck": true,

    "outDir": "./server/build",
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "./client",
    "./server",
    "./common",
    "./webpack.config.js",
    "./.eslintrc.js"
  ]
}
